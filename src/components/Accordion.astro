---
const { accordionHeading, accordionText, accordionId } = Astro.props;
---

<div x-data={`{ id: ${accordionId}, get expanded() { return this.active === this.id }, set expanded(value) { this.active = value ? this.id : null } }`} role="region">
  <h2 class="text-themeGray-800">
    <button
      @click="expanded = !expanded"
      :aria-expanded="true/false"
      class="flex w-full items-center justify-between px-6 py-4 text-xl font-bold"
    >
      <span class="text-themeGray-800">{accordionHeading}</span>
      <span x-show="expanded" aria-hidden="true" class="ml-4">&minus;</span>
      <span x-show="!expanded" aria-hidden="true" class="ml-4">&plus;</span>
    </button>
  </h2>
  <div x-show="expanded" class="pb-4 px-6 text-themeGray-800">{accordionText}</div>
</div>
