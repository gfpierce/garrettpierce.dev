                class="is-flex pb-3 justify-center overflow-scroll overscroll-x-auto"
        >
            <li>
                <button
                        :id="$id('tab', whichChild($el.parentElement, $refs.tablist))"
                        @click="select($el.id)"
                        @mousedown.prevent
                        @focus="select($el.id)"
                        type="button"
                        :tabindex="isSelected($el.id) ? 0 : -1"
                        :aria-selected="isSelected($el.id)"
                        :class="isSelected($el.id) ? 'highlighted-tab' : 'border-transparent'"
                        role="tab"
                        class="button is-inline-flex text-wrap text-themeGray-800"
                >
                    Hardware
